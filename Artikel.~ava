 *
 * Description
 *
 * @version 1.0 from 5/14/2020
 * @author 
 */

public class Artikel {
  
  // start attributes
  private String Name;
  private int Preis;
  private int Artikelnummer;
  private String Beschreibung;
  private String Hersteller;
  private int verkaufszahl;
  // end attributes
  
  public Artikel(String Name, int Artikelnummer, int Preis, String Beschreibung, String Hersteller) {
    this.Name = Name;
    this.Preis = Preis;
    this.Artikelnummer = Artikelnummer;
    this.Beschreibung = Beschreibung;
    this.Hersteller = Hersteller;
    this.verkaufszahl = 0;
  }

  // start methods
  public String getName() {
    return Name;
  }

  public int getPreis() {
    return Preis;
  }

  public int getArtikelnummer() {
    return Artikelnummer;
  }

  public String getBeschreibung() {
    return Beschreibung;
  }

  public String getHersteller() {
    return Hersteller;
  }
  
  public void verkauft() {
    this.verkaufszahl++;
  }
  
  public int getverkaufszahl(){
    return this.verkaufszahl;
    }
  // end methods
} // end of Artikel

